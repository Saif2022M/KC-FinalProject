<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PROF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView39"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="الإعدادات"
                android:textSize="30sp"
                android:fontFamily="@font/toto"
                android:textColor="@color/black"
                android:gravity="center"
                />

            <ImageView
                android:id="@+id/imageView59"
                android:layout_width="237dp"
                android:layout_gravity="center"
                android:layout_height="188dp"
                app:srcCompat="@drawable/profile" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ســـائــــح"
                android:textSize="30sp"
                android:fontFamily="@font/mo"
                android:textColor="@color/black"
                android:gravity="center"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="118dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView48"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="اللغة "
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:fontFamily="@font/nask"
                    />

                <Switch
                    android:id="@+id/switch2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:showText="false"
                    android:splitTrack="false"
                    android:text="اللغة العربية"

                    android:textColor="@color/black"
                    android:textOn="on"
                    android:textSize="20dp" />

                <Switch
                    android:id="@+id/switch3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="اللغة الإنجليزية"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="118dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="وضع التطبيق"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:fontFamily="@font/nask"
                    />

                <Switch
                    android:id="@+id/switch4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="الوضع المظلم"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>

                <Switch
                    android:id="@+id/switch5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="الوضع الفاتح"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>