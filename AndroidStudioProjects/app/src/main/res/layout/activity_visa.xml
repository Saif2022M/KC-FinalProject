<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".VISA">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="استخراج التأشيرة "
        android:fontFamily="@font/toto"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="234dp"
                app:srcCompat="@drawable/vv" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/shorq"
                android:gravity="center"
                android:text="الجنسيات التي يمكنها الحصول على التأشيرة السياحية عبر الموقع من رعايا الدول التالية :"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="أسبانيا	ألمانيا	أندورا أوكرانيا	أيرلندا	أيسلندا استراليا	استونيا	البرتغال التشيك	الدانمارك	السويد الفاتيكان	المملكة المتحدة	النرويج النمسا	الولايات المتحدة الامريكية	اليابان اليونان	ايطاليا	بلجيكا بلغاريا	بوتان	بوروني بولندا	تركيا	جمهورية الصين الشعبية - هونج كونج جمهورية هنغاريا	جورجيا	رومانيا سان مارينو	سلوفاكيا	سلوفينيا سنغافوره	سويسرا	صربيا فرنسا	فنلندا	قبرص كرواتيا	كمبوديا	كندا كوريا الجنوبية	لاتفيا	لاوس لتوانيا	لوكسمبرغ	ليختنشتاين مالطا	ماليزيا	موناكو نيوزيلندا	هولندا"

                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView73"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/rr"
                android:text="يرجى من رعايا الدول المذكورة التوجه لموقع وزارة الداخلية "
                android:textColor="@color/black"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="215dp"
                android:layout_height="189dp"
                android:layout_gravity="center"
                android:onClick="Visa"
                app:srcCompat="@drawable/daklia" />

            <TextView
                android:id="@+id/textView74"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mo"
                android:gravity="center"
                android:onClick="Visa"
                android:text="وزارة الداخلية "
                android:textColor="@color/black"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView75"
                    android:layout_width="138dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/shorq"
                    android:gravity="center"
                    android:text="ملاحظة "
                    android:textColor="#FF0000"
                    android:textSize="40sp" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="12dp"
                    android:layout_height="67dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/thzeer" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView76"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/shorq"
                android:gravity="center"
                android:text="في حالة عدم وجود جنسيتك يرجى التوجه إلى السفارة الكويتية في بلدك "
                android:textColor="#000000"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>